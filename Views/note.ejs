    <% if(note.length <= 0) {%>
      <div class="img-notFound">
        <img src="/notfound.svg" height="340px" width="340px" alt="You Dont have any note" class="Nots Found"/>
        <p class="note-msg mt-3">You have <%= note.length %> Notes <br>Create some Notes</p>
        <div data-toggle="modal" data-target="#saveNote" class="divBtn">Create Note</div>
      </div>
    <%} else {%>
      <div class="total_notes">
       <h2 class="text-info mt-1">Total Notes: <%= note.length %></h2>
       <h2 class="text-info mt-1">Author: <%= user.name %></h2>
      </div>
    <% for(var i=0; i < note.length; i++) {%>
    <div class="card mt-2" style="background-color: #2c363e;margin-top: 2rem !important;">
        <div class="card-header" style="color: darkorange;">
         <%= note[i].public %> <code class="float-right">Publish on  <%= note[i].date %></code>
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <textarea class="form-control textarea" wrap="off" rows="13" spellcheck="off"><%= note[i].note%></textarea>
            <code class="blockquote-footer"><cite title="Source Title" style="color: gold;"><%= note[i].writer %></cite></code>
            <button class="btn btn-info float-right note-btn"><i class="fa fa-pencil-square-o"></i> Edit</button>
            <button class="btn btn-danger float-right mr-5 note-btn"><i class="fa fa-trash-o"></i> Delete</button>
          </blockquote>
        </div>
      </div>
      <!-- for else -->
     <% } %> 
     <!-- for loop -->
     <% } %> 
</div>

