<% if(typeof errors !='undefined' ){ %>
  <% errors.forEach(function(error) { %>
    <div class="alert alert-warning alert-dismissible fade show suc1" role="alert">
      <%= error.msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% }); %>
      <% } %>



        <% if(success_msg !='' ){ %>
          <div class="alert alert-success-custome alert-dismissible fade show suc2" id="alert" role="alert">
            <%= success_msg %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
          </div>
          <% } %>




            <!-- errors while registration -->
            <% if(error !='' ){ %>
              <div class="alert alert-danger-custome alert-dismissible fade show suc3" role="alert">
                <%= error %>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
              </div>
              <% } %>


                <style>
                  .suc2 {
                    position: fixed;
                    top: 40px;
                    right: 10px;
                    z-index: 1;
                    animation-name: fade;
                    animation-delay: 4s;
                    animation-duration: 1s;
                    animation-fill-mode: forwards;
                    font-weight: bold;
                    z-index: 999;
                  }

                  .suc3 {
                    position: fixed;
                    top: 40px;
                    right: 10px;
                    z-index: 999;
                    font-weight: bold;
                  }

                  @keyframes fade {
                    0% {
                      display: block;
                      opacity: 1;
                    }

                    50% {
                      display: block;
                      opacity: .5;
                    }

                    100% {
                      display: none;
                      opacity: 0;
                    }
                  }

                  .alert-success-custome {
                    box-shadow: 1px 0px 7px 0px #00000075;
                    color: #ffffff;
                    background-color: #3f51b5;
                    border-color: #631fdc;
                    background-image: linear-gradient(45deg, #7b2fff, #af17ca);
                  }

                  .alert-danger-custome {
                    color: #f9f9f9;
                    background-color: #ff9800;
                    border-color: #ff5722;
                    background-image: linear-gradient(45deg, #fb1e0e, #ef0554);
                  }
                </style>

