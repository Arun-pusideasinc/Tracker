<% if(typeof errors != 'undefined'){ %> <% errors.forEach(function(error) { %>
  <div class="alert alert-warning alert-dismissible fade show suc1" role="alert">
    <%= error.msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% }); %> 
  <% } %> 


  <% if(success_msg != ''){ %>
  <div class="alert alert-success alert-dismissible fade show suc" role="alert">
    <%= success_msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% } %> 
  
  <% if(error_msg != ''){ %>
  <div class="alert alert-danger alert-dismissible fade show suc2" role="alert">
    <%= error_msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% } %>

 <% if(down_msg != '') { %>
    <div class="notification">
      <%= down_msg %>
    </div>
  <% } %>
  
  <!-- errors while registration -->
 <% if(error != ''){ %>
  <div class="alert alert-danger alert-dismissible fade show suc3" role="alert">
    <%= error %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% } %>

  <style>
    .notification{
      display: block;
      z-index: 999999999;
      padding: 30px;
      background: red;
      height: 100px;
      width: 200px;
      position: absolute;
      top:50%;
      left:50%;
      transform: translate(-50%,-50%);
    }
    .suc2{
      position: fixed;
      bottom: 20px;
      right: 10px;
      z-index: 1;
    }
    .alert-danger{
      box-shadow: 1px 0px 7px 0px #00000075;
      color: #ffffff;
      background-color: #2196F3;
      border-color: #52abd4;
      background-image: linear-gradient(45deg, #134974, transparent);
    }
  </style>